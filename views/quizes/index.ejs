<h3>Preguntas</h3>

<form id="fSearch" name="fSearch" action="/quizes" method="get">
    <label>Buscador</label>
    <input type="text" name="search" id="search" value="" placeholder="Buscador de preguntas">
    <input type="submit" value="Buscar">

</form>

<table width="100%" cellpadding="5" cellspacing="0" >
        <tr>
            <th>Preguntas</th>
            <th>Tema</th>
            <%if(session.user){%>
            <th colspan="2">Opciones</th>
            <%}%>
        </tr>
    <% var i; for(i=0;i<quizes.length; i++){ %>
        <tr>
            <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
            <td><a href="quizes/<%= quizes[i].tema %>"><%= quizes[i].tema %></a></td>
            <%if(session.user){%>
            <td><a href="quizes/<%= quizes[i].id %>/edit"><button>Editar</button></a></td>
            <td>
                <form method="post" action="quizes/<%= quizes[i].id%>?_method=delete">
                    <button type="submit" onclick="return confirm('Borrar: <%= quizes[i].pregunta %>')">Borrar</button>
                </form>
            </td>
            <%}%>
        </tr>
    <% } %>
</table>
<%if(session.user){%>
<a href="/quizes/new"><button type="button">Crear pregunta</button> </a>
<%}%>